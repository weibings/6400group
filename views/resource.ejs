<% include ./partials/header.ejs%>
	<div class="card">
		<div class="row">
			<div class="col-md-9" style="margin:20vh auto">
				<form action="/resource" method="POST">
				<h2 style="margin-bottom: 40px;text-align: center">
					New Resource Info
				</h2>
				
				<div class="form-group row">

					    <label for="resourceID" class="col-sm-4 col-form-label">Resource ID</label>
					    <div class="col-sm-8">
					        <input type="text" class="form-control-plaintext" id="resourceID" value="123454">
					    </div>
					</div>
					<div class="form-group row">
					    <label for="owner" class="col-sm-4 col-form-label">Owner</label>
					    <div class="col-sm-8">
					        <input type="text" class="form-control-plaintext" id="owner" value="City of Atlanta">
					    </div>
					</div>
					<div class="form-group row">
					    <label for="resourceName" class="col-sm-4 col-form-label">Resource Name</label>
					    <div class="col-sm-8">
					        <input type="text" class="form-control" id="resourceName" placeholder="2015 Hammer">
					    </div>
					</div>
					<div class="form-group row">
						<label for="primaryESF" class="col-sm-4 col-form-label">Primary ESF</label>
					    <div class="col-sm-8">
						    <select class="form-control" id="primaryESF">
					  	        <option>1</option>
						        <option>2</option>
						        <option>3</option>
						        <option>4</option>
						        <option>5</option>
						    </select>
						</div>
					</div>
					<div class="form-group row">
						<label for="addtionalESF" class="col-sm-4 col-form-label">Additional ESF</label>
					    <div class="col-sm-8">
						    <select multiple class="form-control" id="additionalESF">
					  	        <option>1</option>
						        <option>2</option>
						        <option>3</option>
						        <option>4</option>
						        <option>5</option>
						    </select>
						</div>
					</div>
					<div class="form-group row">
					    <label for="model" class="col-sm-4 col-form-label">Model</label>
					    <div class="col-sm-8">
					        <input type="text" class="form-control" id="model" placeholder="2015 Hammer">
					    </div>
					</div>
					<div class="form-group row">
					    <label for="capabilities" class="col-sm-4 col-form-label">Capabilities</label>
					    <div class="col-sm-8">
					        <textarea class="form-control" id="capabilities"></textarea>
					    </div>
					</div>
					<div class="form-group row">
					    <label class="col-sm-4 col-form-label"></label>
					    <div class="col-sm-6">
					        <input type="text"class="form-control" id="capability">
					    </div>
					    <button id="addCap" onclick="addText()" class="btn btn-outline-primary">Add</button>

					</div>
					<div class="form-group row">
					    <label class="col-sm-4 col-form-label">Home Location</label>
					    <label for="latitude" class="col-sm-2 col-form-label">Latitude</label>
					    <div class="col-sm-2">
					        <input type="number" step="0.001" class="form-control" id="latitude" placeholder="0.001">
					    </div>
					    <label for="longitude" class="col-sm-2 col-form-label">Longitude</label>
					    <div class="col-sm-2">
					        <input type="number" step="0.001" class="form-control" id="longitude" placeholder="0.001">
					    </div>
					</div>
					<div class="form-group row">
					    <label for="distance" class="col-sm-4 col-form-label">Max Distance</label>
					    <div class="col-sm-2">
					        <input type="number" step="0.1" class="form-control" id="distance" max="1000">
					    </div>
					    <label for="distance" class="col-sm-4 col-form-label">kilometers</label>
					</div>
					<div class="form-group row">
					    <label class="col-sm-4 col-form-label">Cost</label>
					    	<label for="money" class="col-form-label">$</label>
					    	<div class="col-sm-2" style="padding-left: 0">
					        <input type="number" step="0.1" style="padding-left: 0" class="form-control" id="money" placeholder="0.1">
					    </div>
					    <label for="unit" class="col-form-label">per</label>
					    <div class="col-sm-4">
						    <select class="form-control" id="unit">
					  	        <option>hour</option>
						        <option>minute</option>
						        <option>day</option>
						    </select>
						</div>
					</div>
					<div class="form-group" style="float:right">
						<a href="/main" class="btn btn-outline-primary">Cancel </a>
						<button class="btn btn-outline-primary">Save</button>
					</div>
				</form>
				
			</div>
		</div>
	</div>
	<script>
		function addText() {
			let value = document.getElementById("capability").value;
		    //var targ = event.target || event.srcElement;
		    document.getElementById("capabilities").value += value+'\n';
		    document.getElementById("capability").value = "";
		}
	</script>
<% include ./partials/footer.ejs%>
