<% include ./partials/header.ejs%>
	<div class="card">
		<div class="row">
			<div class="col-md-9" style="margin:20vh auto">
				<form action="/resource" method="POST">
				<h2 style="margin-bottom: 40px;text-align: center">
					New Resource Info
				</h2>
				
				<div class="form-group row">
					    <label for="resourceID" class="col-sm-4 col-form-label">Resource ID</label>
					    <div class="col-sm-8">
					        <input type="text" class="form-control-plaintext" id="resourceID" value="123454" readonly="">
					    </div>
					</div>
					<div class="form-group row">
					    <label for="owner" class="col-sm-4 col-form-label">Owner</label>
					    <div class="col-sm-8">
					        <input type="text" class="form-control-plaintext" name="owner" id="owner" value=<%=currentUser%> readonly>
					    </div>
					</div>
					<div class="form-group row">
					    <label for="resourceName" class="col-sm-4 col-form-label">Resource Name</label>
					    <div class="col-sm-8">
					        <input type="text" class="form-control" name ="resourceName" id="resourceName" placeholder="2015 Hammer">
					    </div>
					</div>
					<div class="form-group row">
						<label for="primaryESF" class="col-sm-4 col-form-label">Primary ESF</label>
					    <div class="col-sm-8">
						    <select class="form-control" name ="primaryESF" id="primaryESF">
						    	<option></option>
						    	<%esfs.forEach(function(esf){%>
						    	<option><%=esf%></option>
						    <%})%>
						    </select>
						</div>
					</div>
					<div class="form-group row">
						<label for="addtionalESF" class="col-sm-4 col-form-label">Additional ESF</label>
					    <div class="col-sm-8">
						    <select multiple class="form-control" name="additionalESF" id="additionalESF">
					  	        <%esfs.forEach(function(esf){%>
					  	        if(esf !===)
						    	<option><%=esf%></option>
						    <%})%>
						    </select>
						</div>
					</div>
					<div class="form-group row">
					    <label for="model" class="col-sm-4 col-form-label">Model</label>
					    <div class="col-sm-8">
					        <input type="text" class="form-control" name = "model" id="model" placeholder="2015 Hammer">
					    </div>
					</div>
					<div class="form-group row">
					    <label for="capabilities" class="col-sm-4 col-form-label">Capabilities</label>
					    <div class="col-sm-8">
					        <textarea class="form-control" name="capabilities" id="capabilities"></textarea>
					    </div>
					</div>
					<div class="form-group row">
					    <label class="col-sm-4 col-form-label"></label>
					    <div class="col-sm-6">
					        <input type="text"class="form-control" id="capability">
					    </div>
					    <button type="button" onclick="addText()" id="addCap" class="btn btn-outline-primary">Add</button>

					</div>
					<div class="form-group row">
					    <label class="col-sm-4 col-form-label">Home Location</label>
					    <div class="input-group-prepend" style="margin-left: 15px">
						    <span class="input-group-text">Latitude</span>
						</div> 
					    <div class="col-sm-2" style="padding-left: 0;margin-right: 50px">
					        <input type="number" step="0.001" class="form-control" name="latitude" id="latitude" required ="true" placeholder="0.001" max="90" min="-90">
					    </div>
					    <div class="input-group-prepend">
						    <span class="input-group-text">Longitude</span>
						</div> 
					    <div class="col-sm-2" style="padding-left: 0">
					        <input type="number" step="0.001" class="form-control" name="longitude" id="longitude" required ="true" placeholder="0.001" max="180" min="-180">
					    </div>
					</div>
					<div class="form-group row">
					    <label for="distance" class="col-sm-4 col-form-label">Max Distance</label>
					    <div class="col-sm-2">
					        <input type="number" step="0.1" class="form-control" name="distance" id="distance" max="1000">
					    </div>
					    <label for="distance" class="col-sm-4 col-form-label">kilometers</label>
					</div>
					<div class="form-group row">
					    <label class="col-sm-4 col-form-label">Cost</label>
					    	<div class="input-group-prepend" style="margin-left: 15px">
							    <span class="input-group-text">$</span>
							</div>
					    	<div class="col-sm-2" style="padding-left: 0; margin-right: 40px">
						        <input type="number" step="0.1" style="padding-left: 0.1" class="form-control" required ="true" name="money" id="money" placeholder="0.1">
						    </div>

					  <div class="input-group-prepend">
						    <span class="input-group-text">per</span>
						</div>  
					    <div class="col-sm-4" style="padding-left: 0">
						    <select class="form-control" name="unit" id="unit">
						    	<%units.forEach(function(unit){%>
						    	<option><%=unit%></option>
						    <%})%>
						    </select>
						</div>
					</div>
					<div class="form-group" style="float:right">
						<a href="/main" class="btn btn-outline-primary">Cancel</a>
						<button class="btn btn-outline-primary">Save</button>
					</div>
				</form>
				
			</div>
		</div>
	</div>
	<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
	<script type="text/javascript">
		$(document).ready(function(){
		    $("select.country").change(function(){
		        var selectedCountry = $(".country option:selected").val();
		        alert("You have selected the country - " + selectedCountry);
		    });
		});
		function addText() {
			let value = document.getElementById("capability").value;
		    document.getElementById("capabilities").value += value+'\n';
		    document.getElementById("capability").value = "";
		}
	</script>
<% include ./partials/footer.ejs%>
