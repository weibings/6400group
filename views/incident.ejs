<% include ./partials/header.ejs%>
	<div class="card">
		<div class="row">
			<div class="col-md-7" style="margin:20vh auto">
				<form action="/emergence" method="POST">
				<h2 style="margin-bottom: 40px;text-align: center">
					New Incident Info
				</h2>					
					<div class="form-group row">
						<label for="declaration" class="col-sm-4 col-form-label">Declaration</label>
					    <div class="col-sm-8">
						    <select class="form-control" id="declaration">
					  	        <option>Major Disaster</option>
						        <option>Emergency</option>
						        <option>Fire Management</option>
						        <option>Fire Suppression</option>
						    </select>
						</div>
					</div>
					<div class="form-group row">
					    <label for="incidentID" class="col-sm-4 col-form-label">Incidnet ID</label>
					    <div class="col-sm-8">
					        <input type="text" class="form-control-plaintext" id="incidentID" value="12345">
					    </div>
					</div>
					<div class="form-group row">
						<label for="date" class="col-sm-4 col-form-label">Date</label>
					    <div class="col-sm-8">
					        <input type="Date" class="form-control" id="date" placeholder="MM/DD/YYYY">
					    </div>
					</div>
					<div class="form-group row">
					    <label for="description" class="col-sm-4 col-form-label">Description</label>
					    <div class="col-sm-8">
					        <input type="text" class="form-control" id="description">
					    </div>
					</div>
					<div class="form-group row">
					    <label class="col-sm-4 col-form-label">Home Location</label>
					    <label for="latitude" class="col-sm-2 col-form-label">Latitude</label>
					    <div class="col-sm-2">
					        <input type="number" step="0.001" class="form-control" id="latitude" placeholder="0.001">
					    </div>
					    <label for="longitude" class="col-sm-2 col-form-label">Longitude</label>
					    <div class="col-sm-2">
					        <input type="number" step="0.001" class="form-control" id="longitude" placeholder="0.001">
					    </div>
					</div>
					<div class="form-group" style="float:right">
						<a href="/main" class="btn btn-outline-primary">Cancel </a>
						<button class="btn btn-outline-primary">Save</button>
					</div>
			</div>
		</div>
	</div>
	<script>
		function addText() {
			let value = document.getElementById("capability").value;
		    //var targ = event.target || event.srcElement;
		    document.getElementById("capabilities").value += value+'\n';
		    document.getElementById("capability").value = "";
		}
	</script>
